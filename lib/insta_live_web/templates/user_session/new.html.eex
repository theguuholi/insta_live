<h1>InstaLive - Log in</h1>

<%= form_for @conn, Routes.user_session_path(@conn, :create), [as: :user], fn f -> %>
<%= if @error_message do %>
<div class="alert alert-danger">
  <p><%= @error_message %></p>
</div>
<% end %>

<div class="input-field col s6">
  <%= label f, :email %>
  <%= email_input f, :email, required: true, class: "validate" %>
</div>

<div class="input-field col s6">
  <%= label f, :password %>
  <%= password_input f, :password, required: true, class: "validate" %>
</div>

<label>
  <%= checkbox f, :remember_me %>
  <span>Keep me logged in for 60 days</span>
</label>

<div>
  <%= submit "Log in", class: "btn" %>
</div>
<% end %>

<p>
  <%= link "Register", to: Routes.user_registration_path(@conn, :new) %> |
  <%= link "Forgot your password?", to: Routes.user_reset_password_path(@conn, :new) %>
</p>
